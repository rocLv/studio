<!-- sign in -->
<div class="min-vh-100 d-flex align-items-center " style="background:url(/assets/register-img.jpg)no-repeat; background-size: cover;">
  <div class="container">
    <div class="row">
      <div class="offset-lg-3 col-lg-6 col-12">
        <a href="../index.html" class="mb-4 d-flex justify-content-center">
          <img src="/assets/logo.svg" alt="" /></a>

        <div class="bg-dark p-4 p-lg-8 rounded-lg text-muted">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h1 class="mb-2 text-white">欢迎回来</h1>
            <p class="mb-4">请先登陆</p>
						<%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group mb-4">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "form-control border-0"%>
            </div>

            <div class="form-group mb-4">
              <%= f.label :密码 %><br />
              <%= f.password_field :password, autocomplete: "current-password",
                class: "form-control border-0"%>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group mb-4">
                <div class="custom-control custom-switch">
                  <%= f.check_box :remember_me, class: "custom-control-input", id: "customSwitch1" %>
                  <label class="custom-control-label" for="customSwitch1">记住我</label>
                </div>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "登陆",  class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
